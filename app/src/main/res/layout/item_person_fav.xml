<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layoutDirection="rtl"
    android:orientation="vertical"
    android:textDirection="ltr"
    android:layout_margin="@dimen/_3ssp"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="50dp"
        android:src="@drawable/ph2"
        android:layout_height="50dp" />
    <LinearLayout
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/_10ssp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <com.shalate.red.shalate.ConstantsFonts.SemiBoldTextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@+id/image"
            android:text="ِAhmed Ibraheem "

            android:textColor="@color/colorPrimaryDark"
       android:textSize="@dimen/_9ssp" />
        <com.shalate.red.shalate.ConstantsFonts.SemiBoldTextView
            android:id="@+id/des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image"
            android:layout_centerHorizontal="true"
            android:text="مصمم جرافيك"
            android:textColor="#5B5B5B"
       android:textSize="@dimen/_9ssp" />

    </LinearLayout>


</LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="end"
            android:weightSum="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="end"
                android:weightSum="4"
                android:layout_weight="0.1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                  android:layout_marginLeft="@dimen/_10ssp"
                    android:layout_gravity="end"
                    android:gravity="start"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView

                        android:layout_gravity="center"
                        android:src="@drawable/locmse"
                        android:layout_width="15dp"
                        android:layout_height="15dp" />
                    <com.shalate.red.shalate.ConstantsFonts.RegularTextView
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:layout_marginTop="@dimen/_3ssp"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:textColor="#5B5B5B"
                        android:text="@string/locat"
                        android:textSize="@dimen/_9ssp"

                        android:layout_height="wrap_content" />



                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="@dimen/_10ssp"
                    android:layout_gravity="end"
                    android:gravity="start"

                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginTop="@dimen/_3ssp"
                        android:layout_gravity="center"
                        android:src="@drawable/cahaing"
                        android:layout_width="15dp"
                        android:layout_height="15dp" />
                    <com.shalate.red.shalate.ConstantsFonts.RegularTextView

                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"

                        android:textColor="#5B5B5B"
                        android:text="@string/chat"
                        android:textSize="@dimen/_9ssp"

                        android:layout_height="wrap_content" />


                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="@dimen/_10ssp"
                    android:layout_gravity="end"
                    android:gravity="start"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView

                        android:layout_gravity="center"
                        android:src="@drawable/cal"
                        android:layout_width="15dp"
                        android:layout_height="15dp" />
                    <com.shalate.red.shalate.ConstantsFonts.RegularTextView
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:layout_marginTop="@dimen/_3ssp"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:textColor="#5B5B5B"
                        android:text="@string/cal"
                        android:textSize="@dimen/_9ssp"

                        android:layout_height="wrap_content" />



                </LinearLayout>

                <LinearLayout

                android:layout_gravity="end"
                android:gravity="start"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                    <ImageView

                        android:layout_gravity="center"
                        android:src="@drawable/makeservic"
                        android:layout_width="15dp"
                        android:layout_height="15dp" />
                <com.shalate.red.shalate.ConstantsFonts.RegularTextView
                    android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_3ssp"

                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:textColor="#5B5B5B"
                    android:text="@string/oreder"
                    android:textSize="@dimen/_9ssp"

                    android:layout_height="wrap_content" />



            </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:gravity="end"
            android:orientation="horizontal"
            android:weightSum="1"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_weight="0.5"
                android:layoutDirection="rtl"
                android:gravity="center"
                android:orientation="horizontal"

                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <com.shalate.red.shalate.ConstantsFonts.RegularTextView
                    android:id="@+id/hometxt"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"

                    android:textColor="#5B5B5B"
                    android:text="@string/chat"
                    android:textSize="@dimen/_9ssp"
                    android:drawableTop="@drawable/cahaing"
                    android:layout_height="wrap_content" />
                <com.shalate.red.shalate.ConstantsFonts.RegularTextView

                    android:layout_weight="1"
                    android:layout_width="wrap_content"

                    android:textColor="#5B5B5B"
                    android:text="@string/cal"
                    android:textSize="@dimen/_9ssp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:drawableTop="@drawable/cal"
                    android:layout_height="wrap_content" />

                <com.shalate.red.shalate.ConstantsFonts.RegularTextView
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:layout_weight="1"

                    android:layout_width="wrap_content"

                    android:textColor="#5B5B5B"
                    android:text="@string/oreder"
                    android:textSize="@dimen/_9ssp"
                    android:drawableTop="@drawable/makeservic"
                    android:layout_height="wrap_content" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:weightSum="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layoutDirection="rtl"
                android:layout_weight="0.5"

                android:gravity="center"
                android:orientation="horizontal"

                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@drawable/locmse"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginRight="@dimen/_5ssp"
        android:layout_marginLeft="@dimen/_5ssp"
        android:layout_marginTop="@dimen/_5ssp"
        android:background="@drawable/linee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    </LinearLayout>
</LinearLayout>