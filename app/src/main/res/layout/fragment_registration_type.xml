<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bglogin"
    android:gravity="center"
    android:layoutDirection="rtl"

    android:orientation="vertical"
    tools:context="com.shalate.red.shalate.Fragment.RegistrationType">

    <LinearLayout
        android:id="@+id/client"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:layout_marginTop="@dimen/_10ssp"
        android:background="@drawable/lin_shap"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="18sp"
            android:layout_height="18sp"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/_10ssp"
            android:src="@drawable/ic_person" />

        <com.shalate.red.shalate.ConstantsFonts.SemiBoldTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:hint="@string/client"
            android:singleLine="true"
            android:textColor="#787878"
            android:textSize="@dimen/_9ssp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mehanyAcount"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:layout_marginTop="@dimen/_10ssp"
        android:background="@drawable/lin_shap"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="18sp"
            android:layout_height="18sp"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/_10ssp"
            android:src="@drawable/ic_person" />

        <com.shalate.red.shalate.ConstantsFonts.SemiBoldTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image"

            android:layout_centerHorizontal="true"
            android:layout_gravity="center"

            android:background="@android:color/transparent"
            android:gravity="center"
            android:hint="@string/menhy"
            android:singleLine="true"
            android:textColor="#787878"
            android:textSize="@dimen/_9ssp" />
    </LinearLayout>
</LinearLayout>
