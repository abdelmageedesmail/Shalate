<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:layoutDirection="rtl"
    tools:context="com.shalate.red.shalate.Fragment.FragmentImageDetailse">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.v7.widget.RecyclerView
            android:visibility="gone"
            android:layoutDirection="ltr"
            android:id="@+id/recycle_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>

        <LinearLayout
            android:layout_marginTop="@dimen/_10ssp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_15ssp"
                android:layout_weight="0.5"
                android:gravity="start"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/prvileImage"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ph2" />

                <LinearLayout


                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">

                    <com.shalate.red.shalate.ConstantsFonts.SemiBoldTextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/image"
                        android:text="ِAhmed Ibraheem "

                        android:textColor="@color/colorPrimaryDark"
                   android:textSize="@dimen/_9ssp" />

                    <com.shalate.red.shalate.ConstantsFonts.SemiBoldTextView
                        android:id="@+id/des"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/image"
                        android:layout_centerHorizontal="true"
                        android:text="مصمم جرافيك"
                        android:textColor="#5B5B5B"
                   android:textSize="@dimen/_9ssp" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout

                android:layout_gravity="center"
                android:orientation="vertical"
                android:gravity="top|center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5">

                <LinearLayout
                    android:layout_marginBottom="@dimen/_10ssp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout


                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <com.shalate.red.shalate.ConstantsFonts.SemiBoldTextView
                            android:layout_width="wrap_content"
                            android:layout_marginTop="@dimen/_5ssp"
                            android:layout_gravity="center"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/profile_image"
                       android:textSize="@dimen/_9ssp"
                            android:text="500"

                            android:textColor="@color/black"
                            android:layout_height="wrap_content" />
                        <com.shalate.red.shalate.ConstantsFonts.SemiBoldTextView
                            android:layout_width="wrap_content"
                            android:layout_gravity="center"

                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/profile_image"
                       android:textSize="@dimen/_9ssp"
                            android:text="المنشورات"
                            android:textColor="#5B5B5B"

                            android:layout_height="wrap_content" />

                    </LinearLayout>
                    <LinearLayout

                        android:layout_marginRight="@dimen/_15ssp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <com.shalate.red.shalate.ConstantsFonts.SemiBoldTextView
                            android:layout_width="wrap_content"
                            android:layout_marginTop="@dimen/_5ssp"
                            android:layout_gravity="center"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/profile_image"
                       android:textSize="@dimen/_9ssp"
                            android:text="230"

                            android:textColor="@color/black"
                            android:layout_height="wrap_content" />
                        <com.shalate.red.shalate.ConstantsFonts.SemiBoldTextView
                            android:layout_width="wrap_content"
                            android:layout_gravity="center"

                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/profile_image"
                       android:textSize="@dimen/_9ssp"
                            android:text="المتابعين"
                            android:textColor="#5B5B5B"

                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layoutDirection="rtl"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="3"

                    android:layout_marginTop="@dimen/_10ssp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <com.shalate.red.shalate.ConstantsFonts.RegularTextView
                        android:id="@+id/hometxt"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:drawablePadding="@dimen/_3ssp"
                        android:textColor="#5B5B5B"
                        android:text="@string/chat"
                        android:textSize="10sp"
                        android:drawableTop="@drawable/m1"
                        android:layout_height="wrap_content" />
                    <com.shalate.red.shalate.ConstantsFonts.RegularTextView

                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:drawablePadding="@dimen/_3ssp"
                        android:textColor="#5B5B5B"
                        android:text="@string/cal"
                        android:textSize="10sp"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:drawableTop="@drawable/m2"
                        android:layout_height="wrap_content" />

                    <com.shalate.red.shalate.ConstantsFonts.RegularTextView
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:drawablePadding="@dimen/_3ssp"
                        android:textColor="#5B5B5B"
                        android:text="@string/oreder"
                        android:textSize="10sp"
                        android:drawableTop="@drawable/m3"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/_10ssp"
            android:layout_marginRight="@dimen/_10ssp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.shalate.red.shalate.ConstantsFonts.RegularTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/_5ssp"
                android:paddingLeft="@dimen/_10ssp"
                android:layout_below="@+id/image"
                android:layout_centerHorizontal="true"
                android:text="هو نهج إبداعي يقوم به مصمم أو مجموعة
 من المصممين بناء على طلب العميل أو الزبون ويتعاون على
 تنفيذ معطياته المادية مجموعة من المنتجين(عمال طباعة، مبرمجين
، مخرجين، الخ) من أجل إيصال رسالة معينة (أو مجموعة رسائل)
 للجمهور المستهدف"
                android:textColor="#5B5B5B"
           android:textSize="@dimen/_9ssp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_marginTop="@dimen/_10ssp"
            android:layout_marginRight="@dimen/_10ssp"

            android:layout_marginLeft="@dimen/_10ssp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.shalate.red.shalate.ConstantsFonts.BoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image"
                android:minWidth="130sp"

                android:text="رابط الاعمال  "
                android:textColor="#5B5B5B"
           android:textSize="@dimen/_9ssp" />
            <com.shalate.red.shalate.ConstantsFonts.SemiBoldTextView
                android:layout_width="wrap_content"
                android:layout_gravity="end"
                android:layout_alignParentEnd="true"
                android:layout_height="wrap_content"
                android:linksClickable="true"
                android:layout_below="@+id/image"
                android:layout_centerHorizontal="true"
                android:text="www.youtume.com/AhmedIbrameem"
                android:textColor="#5B5B5B"
           android:textSize="@dimen/_9ssp" />
        </RelativeLayout>

        <ScrollView
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.RecyclerView
                android:layout_marginTop="@dimen/_10ssp"
                android:layoutDirection="ltr"
                android:id="@+id/photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </android.support.v7.widget.RecyclerView>
        </ScrollView>

    </LinearLayout>

</ScrollView>
