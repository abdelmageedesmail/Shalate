<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shalate.red.shalate.Fragment.DetailseOnImageClick">


    <LinearLayout
        android:layoutDirection="rtl"
        android:layout_marginTop="@dimen/_10ssp"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginRight="@dimen/_3ssp"
                android:layoutDirection="rtl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/prvileImage"
                    android:src="@drawable/ph2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/_11ssp"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <com.shalate.red.shalate.ConstantsFonts.SemiBoldTextView
                        android:layout_width="wrap_content"
                        android:text="ِAhmed Ibraheem "
                        android:id="@+id/name"
                   android:textSize="@dimen/_9ssp"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/image"
                        android:layout_height="wrap_content" />
                    <com.shalate.red.shalate.ConstantsFonts.SemiBoldTextView
                        android:layout_width="wrap_content"
                        android:text="مصمم جرافيك"
                        android:id="@+id/des"
                   android:textSize="@dimen/_9ssp"
                        android:textColor="#5B5B5B"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/image"
                        android:layout_height="wrap_content" />


                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="@dimen/_5ssp"

                android:layout_alignParentEnd="true"
                android:orientation="vertical"
                android:layout_gravity="start"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/pointmore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout

            android:layout_marginTop="@dimen/_5ssp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/image"
                android:src="@drawable/impr2"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/_10ssp"
            android:layout_width="match_parent"
            android:layout_marginRight="@dimen/_10ssp"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/h1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_marginRight="@dimen/_20ssp"
                android:src="@drawable/h2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_marginRight="@dimen/_20ssp"
                android:src="@drawable/h3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>
        <LinearLayout
            android:layout_marginRight="@dimen/_12ssp"
            android:layout_marginTop="@dimen/_10ssp"
            android:layout_width="match_parent"
            android:gravity="start|center"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/liked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <com.shalate.red.shalate.ConstantsFonts.SemiBoldTextView
                android:layout_width="wrap_content"
                android:text=" ,10 أخرون Islam Mohamed,Ali "
                android:layout_marginRight="@dimen/_10ssp"
                android:layout_gravity="center"
           android:textSize="@dimen/_9ssp"
                android:textColor="#5B5B5B"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/image"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:visibility="invisible"
            android:gravity="end"
            android:layout_marginLeft="@dimen/_10ssp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.shalate.red.shalate.ConstantsFonts.SemiBoldTextView
                android:layout_width="wrap_content"
                android:text="ِAhmed Ibraheem view by the sea "
                android:layout_marginRight="@dimen/_10ssp"
                android:layout_gravity="center"
           android:textSize="@dimen/_9ssp"
                android:textColor="#5B5B5B"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/image"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout


            android:layout_width="match_parent"
            android:gravity="start|center"
            android:layout_height="wrap_content">
            <com.shalate.red.shalate.ConstantsFonts.BoldTextView
                android:layout_width="wrap_content"
                android:text="مشاهدة تعليق : "
                android:layout_marginRight="@dimen/_10ssp"
                android:layout_gravity="center"
           android:textSize="@dimen/_9ssp"
                android:textColor="#5B5B5B"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/image"
                android:layout_height="wrap_content" />
            <com.shalate.red.shalate.ConstantsFonts.SemiBoldTextView
                android:layout_width="wrap_content"
                android:text="10"
                android:layout_marginRight="@dimen/_5ssp"
                android:layout_gravity="center"
           android:textSize="@dimen/_9ssp"
                android:textColor="#5B5B5B"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/image"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout


            android:layout_width="match_parent"
            android:gravity="start|center"
            android:layout_height="wrap_content">
            <com.shalate.red.shalate.ConstantsFonts.SemiBoldTextView
                android:layout_width="wrap_content"
                android:text=" Nice view pro Ali Omran "
                android:layout_marginRight="@dimen/_8ssp"
                android:layout_gravity="center"
           android:textSize="@dimen/_9ssp"
                android:textColor="#5B5B5B"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/image"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout

            android:layout_marginBottom="@dimen/_10ssp"

            android:layout_width="match_parent"
            android:gravity="start|center"
            android:layout_height="wrap_content">
            <com.shalate.red.shalate.ConstantsFonts.SemiBoldTextView
                android:layout_width="wrap_content"
                android:text="  منور يا صديقى شغل رائع  Osama Ali "
                android:layout_marginRight="@dimen/_5ssp"
                android:layout_gravity="center"
           android:textSize="@dimen/_9ssp"
                android:textColor="#5B5B5B"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/image"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>
</FrameLayout>
