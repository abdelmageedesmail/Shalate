<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/linbgg"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30ssp"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_3ssp"
                android:layout_weight="1.9">

                <ImageView
                    android:id="@+id/prvileImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ph2"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_11ssp"
                    android:layout_marginEnd="@dimen/_11ssp"
                    android:orientation="vertical">

                    <com.shalate.red.shalate.ConstantsFonts.SemiBoldTextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/image"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/_9ssp" />

                    <com.shalate.red.shalate.ConstantsFonts.SemiBoldTextView
                        android:id="@+id/des"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/image"
                        android:layout_centerHorizontal="true"
                        android:textColor="#5B5B5B"

                        android:textSize="@dimen/_9ssp" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/makeorder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_gravity="start"
                android:layout_marginLeft="@dimen/_5ssp"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="3">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/d1" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10ssp"
                    android:layout_marginRight="@dimen/_10ssp"
                    android:layout_weight="1"
                    android:src="@drawable/d2" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/d3"
                    android:visibility="gone" />

            </LinearLayout>
        </LinearLayout>

        <com.whinc.widget.ratingbar.RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_18ssp"
            android:layout_marginRight="@dimen/_12ssp"
            app:rb_empty="@drawable/emptyy"
            app:rb_fill="@drawable/startv"
            app:rb_max_count="5"


            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10ssp"
            android:background="@drawable/gotomap"
            android:gravity="center"
            android:visibility="gone">

            <com.shalate.red.shalate.ConstantsFonts.SemiBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image"
                android:layout_centerHorizontal="true"
                android:text="إذهب بالخريطة"
                android:textColor="@color/txtcolo"
                android:textSize="@dimen/_9ssp" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rvLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10ssp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="@dimen/_3ssp"
                android:layoutDirection="rtl">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ph2"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/_11ssp"
                    android:orientation="vertical">

                    <com.shalate.red.shalate.ConstantsFonts.RegularTextView
                        android:id="@+id/tvAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/image"
                        android:layout_centerHorizontal="true"
                        android:text="شارع الخليج العربي مقابل أبراج الكويت"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/_9ssp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"

                android:layout_gravity="start"
                android:layout_marginLeft="@dimen/_5ssp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="3">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/d1"
                    android:visibility="invisible" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10ssp"
                    android:layout_marginRight="@dimen/_10ssp"
                    android:layout_weight="1"
                    android:src="@drawable/d2"
                    android:visibility="invisible" />

                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/loc1" />

            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4ssp"
            android:background="@drawable/linee">

        </LinearLayout>

        <RelativeLayout

            android:id="@+id/rvPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5ssp"
            android:layout_marginBottom="@dimen/_3ssp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/_3ssp"
                android:layoutDirection="rtl">

                <ImageView
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:src="@drawable/ph2"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/_11ssp"
                    android:orientation="vertical">

                    <com.shalate.red.shalate.ConstantsFonts.SemiBoldTextView
                        android:id="@+id/tvPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/image"
                        android:layout_centerHorizontal="true"
                        android:text="+965 2225 1155"
                        android:textColor="#5B5B5B"
                        android:textSize="@dimen/_9ssp" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_gravity="start"

                android:layout_marginLeft="@dimen/_5ssp"
                android:gravity="center"

                android:orientation="horizontal"
                android:weightSum="3">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/d1"
                    android:visibility="invisible" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10ssp"
                    android:layout_marginRight="@dimen/_10ssp"
                    android:layout_weight="1"
                    android:src="@drawable/d2"
                    android:visibility="invisible" />

                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/phone" />

            </LinearLayout>
        </RelativeLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4ssp"
            android:background="@drawable/linee">

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5ssp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_3ssp"
                android:layoutDirection="rtl">

                <ImageView
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:src="@drawable/ph2"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_5ssp"
                    android:layout_marginRight="@dimen/_11ssp"

                    android:orientation="vertical">

                    <com.shalate.red.shalate.ConstantsFonts.SemiBoldTextView
                        android:id="@+id/tvWebSite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/image"
                        android:layout_centerHorizontal="true"
                        android:text="www.borgarat.com"
                        android:textColor="#5B5B5B"
                        android:textSize="@dimen/_9ssp" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"

                android:layout_gravity="start"
                android:layout_marginLeft="@dimen/_5ssp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="3">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/d1"
                    android:visibility="invisible" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10ssp"
                    android:layout_marginRight="@dimen/_10ssp"
                    android:layout_weight="1"
                    android:src="@drawable/d2"
                    android:visibility="invisible" />

                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/loc2" />

            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8ssp"
            android:background="@drawable/linee"></LinearLayout>

        <com.shalate.red.shalate.ConstantsFonts.SemiBoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_10ssp"
            android:layout_marginRight="@dimen/_10ssp"
            android:text="@string/commet"
            android:textColor="#5B5B5B"
            android:textSize="@dimen/_9ssp" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclebestcoment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10ssp">

        </android.support.v7.widget.RecyclerView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5ssp"
            android:layout_marginTop="@dimen/_10ssp"
            android:layout_marginRight="@dimen/_5ssp"
            android:layout_marginBottom="@dimen/_10ssp"
            android:orientation="horizontal"
            android:weightSum="2">

            <EditText
                android:id="@+id/etComment"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="@dimen/_10ssp"
                android:layout_marginEnd="@dimen/_10ssp"
                android:layout_weight="1.5"
                android:background="@drawable/addcomment"
                android:gravity="center"
                android:hint="@string/hintcomment"
                android:lines="5"
                android:textColor="#DBD9DC"
                android:textSize="@dimen/_9ssp" />


            <RelativeLayout
                android:id="@+id/rvAddComment"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:background="@drawable/btnadd">

                <com.shalate.red.shalate.ConstantsFonts.BoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/image"
                    android:layout_centerInParent="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"


                    android:background="@android:color/transparent"
                    android:text="@string/commentt"
                    android:textAlignment="center"
                    android:textColor="@color/txtcolo"
                    android:textSize="@dimen/_9ssp" />

            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>