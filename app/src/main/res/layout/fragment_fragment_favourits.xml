<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.shalate.red.shalate.Fragment.FragmentFavourits">
    <LinearLayout

        android:weightSum="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <LinearLayout
            android:id="@+id/Fshop"
            android:background="@color/grayy"
            android:gravity="center"
            android:layout_weight="0.5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <com.shalate.red.shalate.ConstantsFonts.SemiBoldTextView
                android:layout_width="wrap_content"
                android:background="@android:color/transparent"
                android:text="@string/commerc"
android:gravity="center"
                android:id="@+id/shoptxtt"
                android:textAlignment="center"
                android:layout_gravity="start"

           android:textSize="@dimen/_9ssp"
                android:textColor="#000"

                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/Fperson"
            android:background="@color/greenn"
            android:gravity="center"
            android:layout_weight="0.5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <com.shalate.red.shalate.ConstantsFonts.SemiBoldTextView
                android:id="@+id/person"
                android:layout_width="wrap_content"
                android:background="@android:color/transparent"
                android:text="@string/person"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_gravity="start"

           android:textSize="@dimen/_9ssp"
                android:textColor="@color/txtcolo"

                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/continer"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </LinearLayout>
</LinearLayout>
