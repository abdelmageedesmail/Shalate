<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layoutDirection="rtl"
    android:layout_margin="@dimen/_3ssp"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/chatelin"
        android:orientation="horizontal"
        android:layoutDirection="rtl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="50dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image"
                android:src="@drawable/ph2"
                android:layout_width="50dp"
                android:layout_height="50dp" />
            <LinearLayout

                android:gravity="bottom|left"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView

                    android:src="@drawable/open"
                    android:layout_width="18sp"
                    android:layout_height="18sp" />
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_marginRight="@dimen/_10ssp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <com.shalate.red.shalate.ConstantsFonts.SemiBoldTextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image"
                android:layout_centerHorizontal="true"
                android:text="Essam Ali"
                android:textColor="#5B5B5B"
                android:textSize="@dimen/_9ssp" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.shalate.red.shalate.ConstantsFonts.SemiBoldTextView
                    android:id="@+id/des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/image"
                    android:layout_centerHorizontal="true"
                    android:textColor="#000"
                    android:textSize="@dimen/_9ssp" />
                <com.shalate.red.shalate.ConstantsFonts.SemiBoldTextView
                    android:layout_marginRight="@dimen/_10ssp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/image"
                    android:layout_centerHorizontal="true"

                    android:textColor="#5B5B5B"
                    android:textSize="@dimen/_9ssp" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
    <com.shalate.red.shalate.ConstantsFonts.RegularTextView
        android:layout_marginRight="@dimen/_10ssp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:text="11:54 PM"
        android:visibility="gone"
        android:textSize="@dimen/_9ssp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>